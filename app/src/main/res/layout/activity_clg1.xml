<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_clg1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.uday.playstore.Clg1">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/clg_main_img"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/mngt"/>
        <LinearLayout
            android:padding="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/clg_icon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/icon"
                android:layout_marginRight="10dp"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp">


            <TextView
                android:id="@+id/clg_icon_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Light !"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_above="@+id/clg_main_text2"
                android:textColor="#000"/>
            <TextView
                android:id="@+id/clg_main_text2"
                android:layout_below="@+id/clg_icon"
                android:text="Possibilities"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
                <Button
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:text="3+"
                    android:background="@drawable/button"/>

            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <Button
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:text="+"
                android:textColor="@color/colorPrimary"
                android:background="@drawable/icon2"/>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="right"
            android:orientation="vertical"
            android:padding="5dp">
            <Button
                android:id="@+id/clg1_apply"
                android:background="@color/colorPrimary"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:text="APPLY"
                android:textSize="15sp"
                android:textColor="#ffff"
                android:layout_marginBottom="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact Us, For More Details"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:background="#4000"/>
        <LinearLayout
            android:paddingLeft="10dp"
            android:paddingRight="10dp"

            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="2dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">
                <Button
                    android:layout_marginLeft="5dp"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:text="100"
                    android:textSize="25sp"
                    android:textColor="@color/black"
                    android:background="@drawable/circle_btn"/>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="18dp"
                        android:layout_marginTop="50dp"
                        android:text="THOUSAND"
                        android:textSize="10sp"
                        android:textColor="@color/white"
                        android:background="@drawable/buttonshape"/>
                </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Downloads"/>

            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:padding="2dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:layout_marginLeft="7dp"
                        android:layout_marginTop="1dp"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/circle_btn"/>
                    <Button
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="6dp"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="6dp"
                        android:text="@string/rating_text"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:background="@drawable/circle_btn_filled"/>

                </RelativeLayout>
                <TextView
                    android:layout_marginTop="7dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6,525"/>


            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:padding="2dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <Button
                        android:layout_marginLeft="7dp"
                        android:layout_marginTop="1dp"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:gravity="center"
                        android:background="@drawable/circle_btn_filled"/>
                    <Button
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="6dp"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="6dp"
                        android:background="@drawable/smile"
                        />

                </RelativeLayout>
                <TextView
                    android:layout_marginTop="7dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Casual"/>


            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:padding="2dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:layout_marginLeft="7dp"
                        android:layout_marginTop="1dp"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:gravity="center"
                        android:background="@drawable/circle_btn_filled"/>
                    <Button
                        android:layout_marginLeft="17dp"
                        android:layout_marginTop="11dp"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="6dp"
                        android:background="@drawable/similar_icon"/>

                </RelativeLayout>
                <TextView
                    android:layout_marginTop="7dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Similar"/>


            </LinearLayout>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:background="#4000"/>
        <LinearLayout
            android:padding="10dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/slogan1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/slogan2"/>
            <Button
                android:layout_marginTop="8dp"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:text="READ MORE"
                android:textSize="12sp"
                android:id="@+id/readmore"
                android:textColor="@color/white"
                android:background="@drawable/buttonshape"/>


        </LinearLayout>
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="220dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="5dp">
                <ImageView
                    android:background="@drawable/mngt"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="3dp"/>
                <ImageView
                    android:background="@drawable/mngt"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="3dp"
                    />
                <ImageView
                    android:background="@drawable/mngt"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="3dp"/>

                <ImageView
                    android:background="@drawable/mngt"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="3dp"/>



            </LinearLayout>

        </HorizontalScrollView>

        <LinearLayout
            android:layout_marginTop="12dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DEVELOPER"
                android:textSize="20sp"/>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity=""
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/web"
                    android:layout_marginRight="20dp"/>
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Visit web page"/>


            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity=""
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/mail"
                    android:layout_marginRight="20dp"/>
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Send email"/>


            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity=""
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/lock"
                    android:layout_marginRight="20dp"/>
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Privacy policy"/>


            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity=""
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/permission"
                    android:layout_marginRight="20dp"/>
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Permission details"/>


            </LinearLayout>
            <View
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:background="#4000"/>

            <LinearLayout
                android:layout_marginTop="11dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/flag"
                    android:layout_marginRight="20dp"/>
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Flag as inappropriat"/>


            </LinearLayout>

        </LinearLayout>



    </LinearLayout>

</ScrollView>
